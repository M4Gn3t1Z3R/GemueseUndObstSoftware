<Window x:Class="GemueseUndObstSoftware.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:GemueseUndObstSoftware.ViewModels"
        xmlns:models="clr-namespace:GemueseUndObstSoftware.Models"
        xmlns:local="clr-namespace:GemueseUndObstSoftware"
        mc:Ignorable="d"
        Title="Storage Software" Height="450" Width="800" d:DataContext="{d:DesignInstance Type=viewModel:MainViewModel, IsDesignTimeCreatable=True}">
    <Window.Resources>
        <DataTemplate x:Key="ArticleListDisplay">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="20"/>
                    <RowDefinition/>
                    
                </Grid.RowDefinitions>
                <Label Grid.Row="0" Grid.Column="0" Content="{Binding ArticleNumber}"/>
                <Label Grid.Row="0" Grid.Column="1" Content="{Binding ArticleName}"/>
            </Grid>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Grid.Column="1" Content="New Article" HorizontalAlignment="Left" VerticalAlignment="Top" Height="25" Width="100"/>
        <ListView Grid.RowSpan="2" ItemTemplate="{DynamicResource ResourceKey=ArticleListDisplay}" ItemsSource="{Binding Articles}" d:DataContext="{d:DesignInstance Type=models:Storage, IsDesignTimeCreatable=False}"/>
    </Grid>
</Window>
